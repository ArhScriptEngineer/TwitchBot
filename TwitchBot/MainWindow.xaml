<Window x:Class="TwitchBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchBot"
        mc:Ignorable="d"
        Title="TwitchBot" Height="440" Width="350" MinWidth="340" MinHeight="440" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Closing="Window_Closing" StateChanged="Window_StateChanged">
    <Grid>
        <TextBox x:Name="Streamer" Height="23" Margin="10,10,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="ConnectButton" Content="Подключить" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="23"/>
        <TabControl x:Name="Controls" Margin="10,38,10,10" IsEnabled="False">
            <TabItem Header="Голосование">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="VotingList" Margin="1,1,0,60">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBox Width="120" Height="18" Text="{Binding Strings[0]}" TextChanged="TextBox_TextChanged" Uid="{Binding ID}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn x:Name="VotesHeader" Header="Голоса">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <ProgressBar Height="12" Width="80" Value="{Binding Nums[0]}" Margin="0,0,1,0" HorizontalAlignment="Stretch" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="%" Width="50" >
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <Label Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Content="{Binding Strings[1]}" Padding="0" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Запустить" HorizontalAlignment="Right" Margin="0,0,10,35" VerticalAlignment="Bottom" Width="63" Click="Button_Click_2"/>
                    <Button Content="Остановить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="73" Click="Button_Click_3"/>
                    <Button Content="Добавить" Margin="10,0,0,35" VerticalAlignment="Bottom" Click="Button_Click_1" HorizontalAlignment="Left" Width="61"/>
                    <Button Content="Удалить" Margin="76,0,0,35" VerticalAlignment="Bottom" Click="Button_Click_4" HorizontalAlignment="Left" Width="54"/>
                    <Button Content="Загрузить" HorizontalAlignment="Right" Margin="0,0,88,10" VerticalAlignment="Bottom" Width="69" Click="Button_Click_5"/>
                    <ComboBox x:Name="VotingSelect" HorizontalAlignment="Left" Margin="10,0,0,6" VerticalAlignment="Bottom" Width="120" Height="24" SelectedIndex="0"/>
                    <TextBox x:Name="MinutesBox" HorizontalAlignment="Right" Height="20" Margin="0,0,78,35" TextWrapping="Wrap" Text="1" VerticalAlignment="Bottom" Width="38"/>
                    <Label Content="Минут: " HorizontalAlignment="Right" Margin="0,0,116,35" VerticalAlignment="Bottom" Padding="0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Голосовавшие">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="UserList" Margin="1,1,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Ник" DisplayMemberBinding="{Binding Nickname}" Width="180" />
                                <GridViewColumn Header="Голос" DisplayMemberBinding="{Binding Vote}" Width="120" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Чат">
                <Grid Background="#FFE5E5E5">
                    <Rectangle Fill="#FFF4F4F5" Stroke="Black" VerticalAlignment="Top" Height="103"/>
                    <CheckBox x:Name="TTSpeech" Content="Озвучивать чат" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="TTSpeech_Checked" Background="White"/>
                    <RadioButton x:Name="TTSpeechOH" Content="Только выделенные" HorizontalAlignment="Left" Margin="156,30,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="TurboSpeech" Content="Турбо" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="Voices" VerticalAlignment="Top" Margin="10,70,0,0" SelectionChanged="Voices_SelectionChanged" HorizontalAlignment="Left" Width="141"/>
                    <Label Content="Голос:" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0" Margin="77,54,0,0" Width="57"/>
                    <CheckBox x:Name="TTSNicks" Content="Озвучивать ники" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <TextBox x:Name="CustomRewardID" Height="23" Margin="156,70,10,0" TextWrapping="NoWrap" VerticalAlignment="Top"/>
                    <RadioButton x:Name="CustomReward" Content="Только товар:" HorizontalAlignment="Left" Margin="156,50,0,0" VerticalAlignment="Top"/>
                    <RadioButton x:Name="AllChat" Content="Весь чат" HorizontalAlignment="Left" Margin="156,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
